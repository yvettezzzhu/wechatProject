.content {
  margin-top: 20px;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color: #FFFFFF;
  box-shadow: 2px 2px 4px #d0caf0, -2px -2px 4px #d0caf0;
  border-radius: 6px;
  padding: 8px 16rpx;
}
.content .border {
  border: 1px solid #a49cef;
  padding: 8px 16rpx;
  text-align: center;
}
.content .border .top {
  color: #5428ee;
}
.content .border .box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  margin-top: 16px;
  margin-bottom: 16px;
}
.content .border .box .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .border .box .left image {
  width: 40px;
  height: 40px;
}
.content .border .box .right {
  margin-left: 8px;
  text-align: left;
}
.content .border .box .right .title {
  padding-left: 8px;
  border-radius: 16px;
  width: 100px;
  background-image: -webkit-linear-gradient(left, #a49cef, #FFFFFF);
  background-image: linear-gradient(to right, #a49cef, #FFFFFF);
}
.content .border .box .right .desc {
  margin-top: 6px;
  font-size: 12px;
}
.content .border .box1 {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
