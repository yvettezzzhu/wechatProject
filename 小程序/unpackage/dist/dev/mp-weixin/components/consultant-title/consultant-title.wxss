  font-weight: 400;
}
.box {
  background-color: #FFFFFF;
  margin: 0 30rpx;
  border-radius: 6px;
  box-shadow: 2px 2px 4px #a49cef, -2px -2px 4px #a49cef;
  padding: 12px 24rpx;
}
.box .one {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.box .one .little-box {
  background-image: -webkit-linear-gradient(left, #a3a6ff, #88c7ff);
  background-image: linear-gradient(to right, #a3a6ff, #88c7ff);
  width: 30%;
  text-align: center;
  color: #EFF2F5;
  padding: 6px 0;
  border-radius: 6px;
}
.box .one .little-box .first-line {
  margin-bottom: 4px;
  font-size: 28rpx;
}
.box .one .little-box .second-line {
  font-size: 36rpx;
}
.box .two {
  padding: 12px 16rpx;
  text-align: center;
}
.box .two image {
  margin-top: 8px;
  width: 300rpx;
  height: 300rpx;
}
.box .two .t2 {
  color: #5428EE;
}

