.top1 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background-color: #FFFFFF;
}
.top1 .pic {
  width: 300rpx;
  height: 80px;
}
.top1 .title {
  height: 80px;
  padding: 14px 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.top1 .title .first {
  font-size: 50rpx;
}
.top1 .title .second {
  font-size: 42rpx;
