.wrap {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 8px;
}
.wrap .box {
  border-bottom: 1px solid #eff2f5;
  padding: 8px 30rpx;
  box-shadow: 0 5px 20px 0 #e6e6e6;
  margin-top: 8px;
}
.wrap .box .first {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
